@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="row justify-content-md-center">
    <div class="col-sm-6">
        <h1 class="h3 page-title mb-3">Login</h1>
        <hr />
        <form  method="post" id="loginForm" >
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" name="ReturnUrl" id="ReturnUrl" value="@Model.ReturnUrl" />
            <div class="row">
                <div class="col-md-10">
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <button type="submit" id="login" class="btn btn-primary">Giri≈ü</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section scripts{
<script src="~/js/account/login.js"></script>
}